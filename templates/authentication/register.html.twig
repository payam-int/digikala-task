{% extends 'base.html.twig' %}
{% form_theme form 'forms/semantic-ui-forms-theme.html.twig' %}

{% block breadcrumb %}
    <a class="section">Home</a>
    <i class="right angle icon divider"></i>
    <div class="active section">Register</div>
{% endblock %}

{% block body %}
    <h1 class="ui header">Register</h1>
    <div class="ui form">
        {{ form_start(form) }}
        <div class="field">
            {{ form_row(form.username) }}
        </div>
        <div class="field">
            {{ form_row(form.email) }}
        </div>
        <div class="field">
            {{ form_row(form.plainPassword) }}
        </div>
        <div class="field">
            {{ form_row(form.fullName) }}
        </div>

        <button type="submit" class="ui primary button">Register!</button>
        {{ form_end(form) }}
    </div>
{% endblock %}